{
  "compilerOptions": {
    "allowJs": true,
    "module": "none",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outFile": "app/app.bundle.js"
  },
  "compileOnSave": false,
  "include": [
    "app/app.module.js",
    "app/src/**/*js"
  ]
}